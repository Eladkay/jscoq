{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["esnext", "dom", "dom.iterable"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true
  },
  "exclude": ["_build", "dist"]
}
